{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types/", "./typings"],
    "paths": {
      "@meltingspot/community-features": [
        "libs/community/features/src/index.ts"
      ],
      "@meltingspot/community/data-providers": [
        "libs/community/data-providers/src/index.ts"
      ],
      "@meltingspot/node-util-datagen": ["libs/node/util-datagen/src/index.ts"],
      "@meltingspot/node/util-i18n": ["libs/node/util-i18n/src/index.ts"],
      "@meltingspot/shared-util-date": ["libs/shared/util-date/src/index.ts"],
      "@meltingspot/shared/data-feature-flags": [
        "libs/shared/data-feature-flags/src/index.ts"
      ],
      "@meltingspot/shared/data-generic": [
        "libs/shared/data-generic/src/index.ts"
      ],
      "@meltingspot/shared/error-core-api": [
        "libs/shared/error-core-api/src/index.ts"
      ],
      "@meltingspot/shared/error-graphql": [
        "libs/shared/error-graphql/src/index.ts"
      ],
      "@meltingspot/shared/util-kernel": [
        "libs/shared/util-kernel/src/index.ts"
      ],
      "@meltingspot/shared/util-routes": [
        "libs/shared/util-routes/src/index.ts"
      ],
      "@meltingspot/web/ui-theme": ["libs/web/ui-theme/src/index.ts"],
      "@meltingspot/web/ui-thread": ["libs/web/ui-thread/src/index.ts"],
      "@meltingspot/web/util-hooks": ["libs/web/util-hooks/src/index.ts"],
      "@meltingspot/web/util-language-detector": [
        "libs/web/util-language-detector/src/index.ts"
      ],
      "@meltingspot/web/util-types": ["libs/web/util-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
